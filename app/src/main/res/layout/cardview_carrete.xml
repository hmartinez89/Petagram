<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivFoto_carrete_cardview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/gato"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"/>
    <ImageView
        android:id="@+id/ivHuesoLikes_carrete_cardview"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/icons8_dog_bone_48"
        android:scaleType="fitXY"
        android:layout_marginEnd="20dp"
        android:layout_alignBottom="@+id/tvLikes_carrete_cardview"
        android:layout_alignEnd="@+id/ivFoto_carrete_cardview" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvLikes_cardview"
        android:textSize="@dimen/tvNombre_cardview_fotosmascotas"
        android:textColor="@color/primary_text"
        android:id="@+id/tvLikes_carrete_cardview"
        android:layout_below="@+id/ivFoto_carrete_cardview"
        android:layout_toStartOf="@+id/ivHuesoLikes_carrete_cardview" />
</RelativeLayout>