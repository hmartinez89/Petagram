<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cardview="http://schemas.android.com/tools"
    android:id="@+id/cvMascota"
    android:layout_width="wrap_content"
    android:layout_height="170dp"
    cardview:cardCornerRadius="@dimen/cornerRadius_cardview">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="130dp"
        android:layout_height="170dp"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/ivFoto_cardview"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:src="@drawable/conejo"
            cardview:ignore="ContentDescription" />

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/tvLikes_cardview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"/>

            <ImageView
                android:id="@+id/ivHuesoLikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/ivFoto_cardview"
                android:layout_alignParentEnd="true"
                android:background="@drawable/icons8_dog_bone_48"
                cardview:ignore="ContentDescription" />
        </android.support.v7.widget.LinearLayoutCompat>
    </android.support.v7.widget.LinearLayoutCompat>
</android.support.v7.widget.CardView>