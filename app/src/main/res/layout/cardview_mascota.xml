<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cardview="http://schemas.android.com/tools"
    android:id="@+id/cvMascota"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    cardview:cardCornerRadius="@dimen/cornerRadius_cardview">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivFoto_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingBottom="@dimen/mrgAba_ivFoto_cardview"
            android:src="@drawable/conejo"
            cardview:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/imgBtnHuesoLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icons8_dog_bone_40"
            cardview:ignore="ContentDescription"
            android:layout_alignBottom="@+id/ivFoto_cardview"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/tvNombre_cardview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/mrgIzq_tvNombre_cardview"
            android:text="@string/tvNombre_cardview"
            android:textAlignment="center"
            android:layout_alignTop="@+id/imgBtnHuesoLike"
            android:layout_toEndOf="@+id/imgBtnHuesoLike" />

        <ImageView
            android:id="@+id/ivHuesoLikes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icons8_dog_bone_48"
            cardview:ignore="ContentDescription"
            android:layout_alignBottom="@+id/ivFoto_cardview"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/tvLikes_cardview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/tvLikes_cardview"
            android:textAlignment="center"
            android:layout_alignBaseline="@+id/tvNombre_cardview"
            android:layout_alignBottom="@+id/tvNombre_cardview"
            android:layout_toStartOf="@+id/ivHuesoLikes" />
    </RelativeLayout>
</android.support.v7.widget.CardView>